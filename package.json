{
  "name": "@thednp/solid-color-picker",
  "version": "0.0.8",
  "description": "ðŸŽ¨ Modern Color Picker for SolidJS",
  "keywords": [
    "solid",
    "solid-component",
    "color picker",
    "colorpicker"
  ],
  "homepage": "https://thednp.github.io/solid-color-picker",
  "bugs": {
    "url": "https://github.com/thednp/solid-color-picker/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thednp/solid-color-picker.git"
  },
  "sideEffects": false,
  "type": "module",
  "source": "src/index.tsx",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "solid": {
        "development": "./dist/dev.jsx",
        "import": "./dist/index.jsx"
      },
      "development": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/dev.js"
        }
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./style.css": {
      "import": "./dist/index.css"
    }
  },
  "scripts": {
    "dev": "vite serve example",
    "build:example": "pnpm format && pnpm lint && vite build example",
    "build:docs": "pnpm lint && pnpm format && vite build example --config example/vite.config.docs.ts",
    "format": "prettier -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"example/**/*.{js,ts,json,css,tsx,jsx}\"",
    "badges": "npx -p dependency-version-badge update-badge solid-js typescript eslint prettier vite",
    "build": "tsup",
    "prepublishOnly": "pnpm up && npm update && pnpm format && pnpm lint && tsup && pnpm badges",
    "lint": "pnpm lint:types && pnpm lint:code",
    "lint:code": "eslint --max-warnings 0 src/**/*.{ts,tsx}",
    "lint:types": "tsc --noEmit",
    "fix:ts": "eslint src/**/*.{ts,tsx} --fix",
    "serve": "vite --open docs/index.html"
  },
  "license": "MIT",
  "peerDependencies": {
    "solid-js": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "gh-pages": "^6.1.1",
    "prettier": "^3.3.3",
    "solid-js": "^1.8.21",
    "tsup": "^8.2.4",
    "tsup-preset-solid": "^2.2.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-solid": "^2.10.2",
    "vite-plugin-solid-svg": "^0.8.1"
  },
  "dependencies": {
    "@thednp/color": "^1.0.9",
    "@thednp/color-picker": "^2.0.1",
    "@thednp/shorty": "^2.0.3"
  },
  "packageManager": "pnpm@8.6.12",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.6.0"
  },
  "browser": {},
  "typesVersions": {}
}
